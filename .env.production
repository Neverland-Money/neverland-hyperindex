# Production Environment Configuration for Neverland HyperIndex
# Copy this to .env and fill in your actual production values

# ============================================
# Required: Envio API Token
# ============================================
ENVIO_API_TOKEN=your_envio_api_token_here

# ============================================
# Required: Cloudflare Tunnel Token
# ============================================
# Get this from Cloudflare Zero Trust Dashboard
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# ============================================
# Database Configuration
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=envio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ============================================
# Hasura Configuration
# ============================================
HASURA_ADMIN_SECRET=your_secure_hasura_admin_secret_here

# ============================================
# RPC Endpoint
# ============================================
# Monad Mainnet RPC
RPC_URL_143=https://rpc-mainnet.monadinfra.com

# ============================================
# Indexer Configuration
# ============================================
LOG_LEVEL=info
METRICS_PORT=9090

# ============================================
# External Read Controls
# ============================================
ENVIO_DISABLE_EXTERNAL_CALLS=false
ENVIO_DISABLE_ETH_CALLS=false

# ============================================
# One-time Chain Sync Features
# ============================================
ENVIO_ENABLE_NFT_CHAIN_SYNC=false
ENVIO_ENABLE_LP_CHAIN_SYNC=false

# ============================================
# Debug Settings
# ============================================
DEBUG_LP_POINTS=false
