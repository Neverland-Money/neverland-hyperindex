{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "generated": ["./generated"],
      "generated/*": ["./generated/*"]
    }
  },
  "include": ["src/**/*", "generated/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
